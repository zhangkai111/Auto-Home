<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/item_normal_padding"
            android:text="@string/person_title"
            android:textSize="@dimen/person_title_text_size"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="@dimen/person_image_width"
            android:layout_height="@dimen/person_image_height"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_login_layout_height">

        <TextView
            android:id="@+id/person_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_login"
            android:textSize="@dimen/person_login_text_size" />

    </RelativeLayout>
    <!--**************************************************************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_login_way_height">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/item_normal_padding"
            android:layout_marginLeft="@dimen/activity_image_margin"
            android:layout_marginRight="@dimen/activity_image_margin">

            <ImageView
                android:id="@+id/user_name_login_iv"
                android:layout_width="@dimen/person_image_width"
                android:layout_height="@dimen/person_image_height"
                android:layout_marginLeft="@dimen/activity_image_margin"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/user_name_login_tv"
                android:layout_width="@dimen/text_width"
                android:layout_height="wrap_content"
                android:text="账号登录" />
        </LinearLayout>

        <View
            android:id="@+id/line_center"
            android:layout_width="@dimen/person_view_width"
            android:layout_height="@dimen/person_view_height"
            android:background="@color/colorGray"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/item_normal_padding"
            android:layout_marginLeft="@dimen/activity_image_margin"
            android:layout_marginRight="@dimen/activity_image_margin">

            <ImageView
                android:id="@+id/qq_login_iv"
                android:layout_width="@dimen/person_image_width"
                android:layout_height="@dimen/person_image_height"
                android:layout_marginLeft="@dimen/activity_image_margin"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/qq_login_tv"
                android:layout_width="@dimen/text_width"
                android:layout_height="wrap_content"
                android:text="账号登录" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/person_view_width"
            android:layout_height="@dimen/person_view_height"
            android:layout_centerInParent="true"
            android:background="@color/colorGray"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/item_normal_padding"
            android:layout_marginLeft="@dimen/activity_image_margin"
            android:layout_marginRight="@dimen/activity_image_margin">

            <ImageView
                android:layout_width="@dimen/person_image_width"
                android:layout_height="@dimen/person_image_height"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="@dimen/text_width"
                android:layout_height="wrap_content"
                android:text="微博登录" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/person_view_width"
            android:layout_height="@dimen/person_view_height"
            android:background="@color/colorGray"
            android:layout_marginTop="@dimen/activity_vertical_margin" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/item_normal_padding"
            android:layout_marginLeft="@dimen/activity_image_margin">

            <ImageView
                android:id="@+id/we_chat_iv"
                android:layout_width="@dimen/person_image_width"
                android:layout_height="@dimen/person_image_height"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/we_chat_tv"
                android:layout_width="@dimen/text_width"
                android:layout_height="wrap_content"
                android:text="微信登录" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
