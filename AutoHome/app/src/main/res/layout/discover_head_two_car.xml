<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/discover_head_two_car_brand_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_fifteen"
        android:layout_marginLeft="@dimen/margin_ten"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/discover_head_two_car_hot_iv"
                android:layout_width="@dimen/discover_head_four_image_width"
                android:layout_height="@dimen/discover_head_four_image_height" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_title_tv"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_iv"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:text="title"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_short_title_tv"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_title_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray"
                android:singleLine="true"
                android:text="shorttitle" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_short_title_tv"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorRed"
                android:text="price" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_fctprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_short_title_tv"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorGray"
                android:layout_toRightOf="@id/discover_head_two_car_hot_price_tv"
                android:text="fctprice" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/discover_head_two_car_hot_right_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_head_four_image_height" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_right_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_right_iv"
                android:layout_marginLeft="@dimen/margin_ten"
                android:layout_marginRight="@dimen/margin_ten"
                android:text="title"
                android:textSize="@dimen/text_size_sixteen" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_right_short_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_right_title_tv"
                android:layout_margin="@dimen/margin_ten"
                android:singleLine="true"
                android:textColor="@color/colorGray"
                android:text="shorttitle" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_right_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_right_short_title_tv"
                android:layout_marginBottom="@dimen/margin_ten"
                android:layout_marginLeft="@dimen/margin_ten"
                android:textColor="@color/colorRed"
                android:text="price" />

            <TextView
                android:id="@+id/discover_head_two_car_hot_right_fctprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_head_two_car_hot_right_short_title_tv"
                android:layout_marginLeft="@dimen/margin_five"
                android:textColor="@color/colorGray"
                android:layout_toRightOf="@id/discover_head_two_car_hot_right_price_tv"
                android:text="fctprice" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>