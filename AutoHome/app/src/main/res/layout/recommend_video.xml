<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/item_normal_padding">

        <TextView
            android:id="@+id/recommend_video_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_normal_padding"
            android:text="@string/video_all_drawerlayout"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/drawerlayout_icon_btn"
            android:paddingTop="@dimen/newsflash_drawerlayout_icon_padding"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommend_video_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
